public class Day37Wana {

    public static void main(String[] args) {
        int x = 2;
        switch (x) {
            case 1:
                System.out.println("Nilai x = 1");
                break;
            case 2:
                System.out.println("Nilai x = 2");
                break;
            case 3:
                System.out.println("Nilai x = 3");
                break;
                default:
                    System.out.println("Nilai x tidak diketahui");
        }
    }

}
